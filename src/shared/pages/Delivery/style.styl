.Delivery {
	grid-width(8)
	margin 0 auto
	padding 40px 0
	&__header {
		padding-bottom 28px
		margin-bottom 48px
		border-bottom 1px solid $textColor
		display flex
		justify-content space-between
		align-items flex-end
		.Icon {
			width 32px
			height 32px
			margin-right 16px
		}
	}
	&__user {
		&-name {
			font-size 42px
			line-height 1.1
			margin-bottom 4px
			font-weight $bold
		}
		&-info {
			font-size 18px
			span {
				margin-right 16px

				&:last-child {
					margin-right 0
				}
			}
		}
	}
	&__contacts {
		font-weight $bold
		text-align right
	}
	&__container {
		display flex
		margin-bottom 40px
	}
	&__column {
		grid-width(1, margin-right)
		flex 1
		&:last-child {
			margin-right 0
		}
	}
	&__item {
		margin-bottom 40px

		&:last-child {
			margin-bottom 0
		}
		&__title {
			font-size 22px
			font-weight bold

			.Icon {
				margin-right 16px
			}
		}
		&__text {
			
		}
	}
	&__order {
		border: 1px solid $textColor
		background-color #fff
		border-radius: 6px
		padding 12px
		margin-left -12px

		&__item {
			display flex
			align-items center
			border-bottom: 1px solid $textColor
			padding-bottom: 8px
			padding-top: 12px
			justify-content: space-between
			&:first-child {
				padding-top 0
			}
			&:last-child {
				padding-bottom 0
				border-bottom none
			}
			div {
				margin-right 16px
				&:last-child {
					margin-right 0
				}
			}
			&__img {
				width 100px
				img {
					display block
					width 100%
				}
			}
			&__name {
				font-weight $bold
				flex: 1
			}
			&__size {
				text-transform uppercase
				opacity 0.6
			}
		}
	}
}
