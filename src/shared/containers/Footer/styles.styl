.Footer {
	& {
		background-color #4E4E4D
		padding 16px 0
		color #F5F5F5;
	}
	&__container {
		grid-width()
		margin 0 auto
		display flex
		justify-content space-between
		@media $phone {
			padding 0 16px
			// flex-wrap wrap
			// flex-direction column
			// align-items flex-start
		}
		@media $middlePhone {
			flex-wrap wrap
			flex-direction column
			align-items flex-start
		}
	}
	&__column {
		display block
		&:first-child {
			grid-width(3.5)
			@media $verticalTablet {
				padding-right 32px
			}
			@media $middlePhone {
				margin-bottom 18px
			}
		}
		&:nth-child(2){
			flex 1
		}
		&:last-child {
			box-sizing border-box
			padding-left 40px
			grid-width(3.8)
			@media $verticalTablet {
				width auto
			}
			@media $phone {
				padding-left 20px
				// max-width 270px
			}
			@media $middlePhone {
				padding-left 0
			}
		}
		a {
			margin-right 16px
			&:last-child {
				margin-right 0
			}
		}
	}
	&__phone {
		font-size 20px
		margin-bottom: 16px
		display flex
		flex-direction: column
		justify-content space-between
		// margin-bottom 24px
		a {
			color #FFFFFF
			font-weight bold
			font-size 18px
			line-height 0.9
			margin-bottom 12px
			@media $phone {
				font-size 15px
			}
		}
		div {
			&:last-child {
				margin-bottom 10px
			}
		}
		&__num {
			span {
				display block
				font-size 12px
				line-height 1
			}
		}
		@media $verticalTablet {
			flex-direction column
		}
		@media $tablet {
			font-size 16px
		}
		@media $phone {
			font-size 14px
			flex-direction column
			margin-bottom 8px
		}
	}
	&__logo {
		// margin-bottom 24px
		// margin-left -15px
		&__img {
			fill: #F5F5F5;
			width 200px;
			height auto
			display block
			@media $phone {
				width 170px
				margin-right 16px
			}
		}
	}
	&__address a{
		color #ffffff
	}
	&__social {
		margin-bottom 32px
		// text-align right
		&__title {
			margin-bottom 10px
			font-size 16px
			display block
			@media $phone {
				font-size 14px
			}
		}
		&__icons {
		}
		&__icon {
			display inline-block
			margin-right 16px
			&:last-child {
				margin-right 0
			}
			svg {
				fill #F5F5F5
				transition fill $duration
			}
			&:hover svg{
				fill #cccccc
				faster()
			}
		}
	}
	&__buyer {
		&__title {
			font-size 20px
			line-height 1
			margin-bottom 20px
			font-weight bold
			text-transform uppercase
		}
	}
	&__links {
		display flex
		@media $verticalTablet {
			flex-direction column
		}

		@media $middlePhone {
			flex-direction row
		}
		@media $verticalPhone {
			flex-direction column
		}
		&__column {
			width 50%
			padding-right 24px
			&:last-child {
				padding-right 0
			}
			@media $verticalTablet {
				width 100%
			}
			@media $phone {
				padding-right 16px
			}
		}
	}
	&__link {
		font-size 16px
		color #ffffff
		display block
		line-height 1.3
	}
	&__feedback {
		&__title {
			font-size 20px
			margin-bottom 16px
		}
		&__field {
			width 250px !important
			height 34px !important
			border-radius 0 !important
			border 0 !important
			background #F5F5F5
			padding-left: 8px
			span {
				font-size 18px
				bottom 7px
			}
			@media $phone {
				width calc(100% - 35px) !important
				max-width 230px
				height 36px !important
				box-sizing border-box
			}
			
		}
		&__input {
			display flex
			color #676766
			margin-bottom 16px
		}
		&__button {
			border 0
			border-left 1px solid #4E4E4D
			height 36px
			background #F5F5F5
		}
		&__text {
			font-size 15px
			margin-bottom 16px
			line-height 1.1
		}
		&__note {
			font-size 18px
			line-height 1.1
			text-transform uppercase
		}
	}
	&__payimg {
		display flex
		align-items: center
		margin-top: 16px
		img {
			width 60px
			margin-right 20px
			&:last-child {
				margin-right 0
			}
		}
	}
}