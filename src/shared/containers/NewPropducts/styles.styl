@import '../../styles/common.styl'

.NewProducts {
	& {
		grid-width()
		margin 0 auto
		clearfix()
		margin-bottom 32px
		@media $phone {
			padding 0 16px
			display none
		}
	}
	&_for {
		.NewProducts__title {
			font-size 32px
			margin-bottom 32px
			
		}
		.NewProducts__item {
			width 25%
		}
	}
	&__title {
		font-weight bold
		font-size 40px
		margin-bottom 58px
		text-align center
		@media $phone {
			font-size 32px
			margin-bottom 32px
		}
	}
	&__list {
		margin-right -20px
		clearfix()
		@media $phone {
			margin 0
		}
	}
	&__container {
		display block
	}
	&__wrapper {
		display flex
	}
	&__item {
		width auto
		// grid-width(3)
		width 33.33%

		@media $phone {
			width 50%
		}
		.ProductCard {
			width 100%
		}
		.ProductCard__content {
			position relative
			top auto
			left auto
			padding 0
			padding-top 8px
		}
	}
}