@import '../../styles/common.styl'

.LogoLine {
	background #EBECEC
	color #000
	@media $verticalTablet {
		padding-top 37px
	}
	&__container {
		container()
		padding 15px 0
		display flex
		align-items center
		@media $verticalTablet {
			justify-content space-between
		}
		@media $phone {
			padding 16px
		}
	}
	&__content {
		flex 1
		display flex
		justify-content space-between
		flex-wrap: wrap
		@media $verticalTablet {
			justify-content flex-end
		}
	}
	&__nav {
		display flex
		justify-content space-between
		align-items center
		@media $verticalTablet {
			display none
		}
		&__item {
			margin-right 35px
			font-size 25px
			font-weight bold
			color $textColor
			border-bottom 1px solid transparent
			@media $tablet {
				margin-right 16px
			}
			&:last-child {
				margin-right 0
			}
			&:hover {
				color $linkHoverColor
			}
			&_active {
				border-bottom 1px solid $textColor
				cursor default
				&:hover {
					color $textColor
				}
			}
		}
	}
	&__logo {
		margin-right 40px
		cursor pointer
		display block
		@media $phone {
			width 80px
			height auto
			margin-right 16px
		}
		width 140px
		height 53px
	}
	&__inner {
		vertical-align middle
	}
	&__user {
		display flex
		justify-content space-between
		&__item {
			padding 0 10px
			position relative
			&:after {
				content '|'
				position absolute
				right 0
				top 0
			}
			&:last-child {
				&:after {
					display none
				}
			}
		}
	}
	&__search {
		display inline-block
		vertical-align middle
		@media $tablet {
			display none
		}
	}
	&__action {
		display inline-block
		vertical-align middle
		&__item {
			display inline-block
			vertical-align middle
			margin-right 20px
			&:last-child {
				margin-right 0
			}
			svg {
				vertical-align middle
			}
		}
	}
	&__search {
		& {
			margin-right 32px
		}
	}
	&__social {
		& {
			// margin-right 32px
			display inline-block
			vertical-align middle
			@media $phone {
				margin-right: 0
			}
		}
		&__item {
			display inline-block
			vertical-align middle
			margin-right 12px
			
			@media $phone {
				margin-right 6px
			}
			&:last-child {
				margin-right 0
			}
			&:hover {
				svg {
					fill #000
					faster()
				}
			}
		}
		svg {
			vertical-align middle
			fill #676766
			transition fill $duration
		}
	}
}