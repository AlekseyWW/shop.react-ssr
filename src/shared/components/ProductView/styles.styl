@import '../../styles/common.styl'

.ProductView {
	& {
		grid-width(7.5)
		padding-right 40px
		float left
		position relative
		box-sizing border-box
		@media $phone {
			width 100%
			padding 0
		}
	}
	&__container {
		box-sizing border-box
		overflow hidden
		margin-bottom 32px
	}
	&__wrapper {
		display flex
	}
	img {
		width 100%
	}
	&__image {
		position relative
	}
	&__slide {
		width 100%
		display flex
		justify-content space-between
		align-items center
		box-sizing border-box
		background #ffffff
	}
	&__pagination {
		& {
			display flex
			@media $phone {
				display none
			}
		}
		&__item {
			// width 20%
			width 20%
			flex 1
			background #ffffff
			margin-right 10px
			display flex
			justify-content space-between
			align-items center
			box-sizing border-box
			border: 1px solid transparent
			&:last-child {
				margin-right 0
			}
			&_active {
				border: 1px solid red
			}
		}
	}
	&__navigation {
		& {
			width 100%
			display flex
			justify-content space-between
			padding 0 16px
			position absolute
			top 50%
			margin-top -14px
			left 0
			box-sizing border-box
			height 0
		}
		&__item {
			width 24px
			height 24px
			border: 2px solid transparent
			border-top-color: #ccc
			border-right-color: #ccc
			transform rotate(45deg)
			cursor pointer
			&:first-child {
				border-color: transparent
				border-bottom-color: #ccc
				border-left-color: #ccc
			}
		}
	}
	&__header {
		display none
		padding 0 16px
		@media $phone {
			display block
		}
	}
	&__head {
		margin-bottom 15px
	}
	&__title {
		font-size 32px
		margin-bottom 8px
		font-weight bold
		text-transform uppercase
		line-height 1
	}
	&__subline {
		font-size 32px
		line-height 1
		font-weight bold
	}
	&__price {
		font-size 20px
		font-weight bold
		margin-bottom 12px
		&__value {
			color: #BD2D21
			display inline-block
			margin-right 2px
			padding 0 5px
			&:last-child {
				margin-right 0
			}
		}
		&__old {
			color #000;
			position relative
			display inline-block
			padding 0 5px
			&:before {
				content ''
				position absolute
				top 50%
				left 0
				width 100%
				margin-top -1px
				height 2px
				background-color #808080
			}
		}
	}
}