@import '../../styles/common.styl'

.ProductView {
	& {
		grid-width(8)
		padding-right 80px
		float left
		position relative
		box-sizing border-box
		@media $phone {
			width 100%
			padding 0
		}
	}
	&__container {
		box-sizing border-box
		overflow hidden
		margin-bottom 32px
		@media $phone {
			margin-bottom 72px
		}
	}
	&__wrapper {
		display flex
	}
	img {
		width 100%
	}
	&__image {
		position relative
	}
	&__slide {
		width 100%
		display flex
		justify-content space-between
		align-items center
		box-sizing border-box
		background #ffffff
		& > div {
			width 100% !important
		}
	}
	&__pagination {
		& {
			display flex
			@media $phone {
				display none
			}
		}
		&__item {
			// width 20%
			width 20%
			flex 1
			background #ffffff
			margin-right 10px
			display flex
			justify-content space-between
			align-items center
			box-sizing border-box
			border: 1px solid transparent
			&:last-child {
				margin-right 0
			}
			&_active {
				border: 1px solid red
			}
		}
	}
	&__navigation {
		& {
			width 100%
			display flex
			justify-content space-between
			padding 0 16px
			position absolute
			top 50%
			margin-top -14px
			left 0
			box-sizing border-box
			height 0
		}
		&__item {
			cursor pointer
			height 100%
			width 40px
			position absolute
			top 0
			right 100%
			@media $phone {
				// display none
				top 100%
				left 0
				height 40px
			}
			&:hover {
				i {
					&:after {
						border-bottom-color: #fff
						border-left-color: #fff
						faster()
					}
					
				}
				&:last-child i:after{
					border-bottom-color: transparent
					border-left-color: transparent
					border-top-color: #fff
					border-right-color: #fff
				}
				i:before {
					background-color #EFC825
					faster()
				}
			}
			i {
				width 20px
				height 20px
				position absolute
				top 50%
				left 50%
				margin-left -14px
				margin-top -14px
				&:after {
					content ''
					border: 2px solid transparent
					border-bottom-color: #ccc
					border-left-color: #ccc
					transform rotate(45deg)
					transform-origin: 60% 65%
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					transition border-color $duration
				}
				&:before {
					content: ''
					position absolute
					top -12px
					left -12px
					bottom -12px
					right -12px
					background-color #fff
					border-radius: 50%
					transition background-color $duration
				}
			}
			&:last-child {
				left 100%
				right auto
				i:after {
					transform-origin: 45% 10%
					border: 2px solid transparent
					border-top-color: #ccc
					border-right-color: #ccc
				}
				@media $phone {
					left: auto 
					right 0
				}
			}
		}
	}
	&__header {
		display none
		padding 0 16px
		@media $phone {
			display block
		}
	}
	&__head {
		margin-bottom 15px
	}
	&__note {
		line-height 1.1
		max-width 400px
		padding-top 12px
		font-size 12px
		display block
	}
	&__title {
		font-size 32px
		margin-bottom 8px
		font-weight bold
		text-transform uppercase
		line-height 1
	}
	&__subline {
		font-size 32px
		line-height 1
		font-weight bold
	}
	&__price {
		font-size 20px
		font-weight bold
		margin-bottom 12px
		&__value {
			color: #BD2D21
			display inline-block
			margin-right 2px
			padding 0 5px
			&:last-child {
				margin-right 0
			}
		}
		&__old {
			color #000;
			position relative
			display inline-block
			padding 0 5px
			&:before {
				content ''
				position absolute
				top 50%
				left 0
				width 100%
				margin-top -1px
				height 2px
				background-color #808080
			}
		}
	}
}