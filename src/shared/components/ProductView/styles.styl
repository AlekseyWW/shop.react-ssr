@import '../../styles/common.styl'

.ProductView {
	& {
		grid-width(7.5)
		padding-right 40px
		float left
		position relative
		box-sizing border-box
	}
	&__container {
		box-sizing border-box
		overflow hidden
		margin-bottom 32px
	}
	&__wrapper {
		display flex
	}
	img {
		width 100%
	}
	&__image {
		position relative
	}
	&__slide {
		width 100%
		height 650px
		display flex
		justify-content space-between
		align-items center
		padding 80px
		box-sizing border-box
		background #ffffff
	}
	&__pagination {
		& {
			display flex
		}
		&__item {
			// width 20%
			width 20%
			flex 1
			padding 0 20px
			background #ffffff
			margin-right 10px
			height 150px
			display flex
			justify-content space-between
			align-items center
			box-sizing border-box
			border: 1px solid transparent
			&:last-child {
				margin-right 0
			}
			&_active {
				border: 1px solid red
			}
		}
	}
	&__navigation {
		& {
			width 100%
			display flex
			justify-content space-between
			padding 0 16px
			position absolute
			top 50%
			margin-top -14px
			left 0
			box-sizing border-box
			height 0
		}
		&__item {
			width 24px
			height 24px
			border: 2px solid transparent
			border-top-color: #ccc
			border-right-color: #ccc
			transform rotate(45deg)
			cursor pointer
			&:first-child {
				border-color: transparent
				border-bottom-color: #ccc
				border-left-color: #ccc
			}
		}
	}
}