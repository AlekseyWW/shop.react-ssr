@import '../../styles/common.styl'

.ProductView {
	& {
		grid-width(7.5)
		padding-right 20px
		float left
		position relative
		box-sizing border-box
	}
	&__container {
		box-sizing border-box
		overflow hidden
		margin-bottom 32px
	}
	&__wrapper {
		display flex
	}
	img {
		width 100%
	}
	&__slide {
		width 100%
		height 650px
		display flex
		justify-content space-between
		align-items center
		padding 80px
		box-sizing border-box
		background #ffffff
	}
	&__pagination {
		& {
			display flex
		}
		&__item {
			// width 20%
			width 20%
			flex 1
			padding 0 20px
			background #ffffff
			margin-right 10px
			height 150px
			display flex
			justify-content space-between
			align-items center
			box-sizing border-box
			border: 1px solid transparent
			&:last-child {
				margin-right 0
			}
			&_active {
				border: 1px solid red
			}
		}
	}
}