@import '../../styles/common.styl'

.ProductCard {
	& {
		position relative
		grid-width(3)
		padding 0 10px
		box-sizing border-box
		vertical-align top
		display inline-block
		text-align center
		color $textColor
		line-height 1
		padding-bottom 72px
		@media $phone {
			width 50%
			float left
			padding 0 4px
		}

		&_sm {
			width 33.33%
			padding 0 12px
			text-align left
			padding-bottom 10%
			@media $notebook {
				// padding-bottom 50px
			}
			@media $tablet {
				padding-bottom 10%
			}
			@media $phone {
				width 50%
				margin-right 0
				float left
				box-sizing border-box
				display block
				padding 0 4px
				padding-bottom 15%
			}
			@media $verticalPhone {
				padding-bottom 22%
			}
			.ProductCard__image {
				background-color #C3C3C3
				width auto
				display flex
				justify-content flex-end
				flex-direction column
				box-sizing border-box
				img {
					display block
				}
				svg {
					display block
				}
			}
			.ProductCard__shadow {
				bottom 16px
			}
			.ProductCard__name {
				font-size 14px
				font-weight bold
				@media $phone {
					font-size 12px
					margin-bottom 2px
				}
			}
			.ProductCard__description {
				font-size 12px
			}
			.ProductCard__price {
				font-size 12px
				@media $phone {
					font-size 10px
				}
				& span {
					display block
					margin-bottom 4px
					text-align right
				}
				& span:last-child {
					font-size 18px
					font-weight bold
					margin-bottom 0
					@media $phone {
						font-size 12px
					}
				}
			}
		}
		&:last-child {
			margin-bottom 0
		}
	}
	img {
		width 100%
		display block
	}
	&__content {
		display flex
		justify-content space-between
		position absolute
		top 80%
		left 0
		width 100%
		padding 0 12px
		box-sizing border-box
		@media $notebook {
			// top 236px
		}
		@media $tablet {
			top 78%
		}
		@media $phone {
			top 78%
			padding 0 4px
		}
		@media $verticalPhone {
			top 71%
		}
	}
	&__inner {
	
	}
	&__description {
		display block
		margin-bottom 16px
		font-size 20px
		padding-right 20px
		&:last-child {
			margin-bottom 0
		}
		@media $phone {
			margin-bottom 8px
		}
	}
	&__name {
		display block
		margin-bottom 5px
		font-weight bold
		font-size 30px
		&:last-child {
			margin-bottom 0
		}
		@media $tablet {
			font-size 18px
		}
		@media $phone {
			font-size 13px
		}
	}
	&__price {
		display block
		margin-bottom 5px
		font-size 40px
		&:last-child {
			margin-bottom 0
		}
		@media $tablet {
			font-size 20px
		}
	}
	&__image {
		position relative
		img {
			max-width 100%
		}
		@media $phone {
		}
	}
	&__shadow {
		position absolute
		bottom 0
		left 0
		width 100%
		height auto
		height 6px
		background-size: 120%
		background-position center
		background-image: url(/images/shadow.svg)
	}
	&__shadowline {
		width 80%
		height: 40px;
		position: absolute;
		z-index: 0;
		bottom: 0px;
		left: 50%;
		background: rgba(20, 20, 20, .2);
		box-shadow: 0px 0 15px 30px rgba(20,20,20,.25);
		border-radius: 50%;
		transform-origin: center
		transform: translateX(-50%)
	}
}