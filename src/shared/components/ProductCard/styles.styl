@import '../../styles/common.styl'

.ProductCard {
	& {
		grid-width(3)
		padding 0 10px
		box-sizing border-box
		vertical-align top
		display inline-block
		text-align center
		color $textColor
		line-height 1
		margin-bottom 32px
		@media $phone {
			width 50%
			float left
			padding 0 4px
		}

		&_sm {
			width 25%
			padding 0 12px
			text-align left
			margin-bottom 40px
			@media $phone {
				width 50%
				margin-right 0
				float left
				box-sizing border-box
				margin-bottom 16px
				display block
				padding 0 4px
			}
			.ProductCard__image {
				background-color #C3C3C3
				width auto
				display flex
				justify-content flex-end
				flex-direction column
				margin-bottom 12px
				box-sizing border-box
				img {
					display block
				}
				svg {
					display block
				}
			}
			.ProductCard__shadow {
				bottom 16px
			}
			.ProductCard__name {
				font-size 14px
				font-weight bold
			}
			.ProductCard__description {
				font-size 12px
			}
			.ProductCard__price {
				font-size 12px
			}
		}
		&:last-child {
			margin-bottom 0
		}
	}
	img {
		width 100%
	}
	&__description {
		display block
		margin-bottom 16px
		font-size 20px
		&:last-child {
			margin-bottom 0
		}
		@media $phone {
			margin-bottom 8px
		}
	}
	&__name {
		display block
		margin-bottom 5px
		font-weight bold
		font-size 30px
		&:last-child {
			margin-bottom 0
		}
		@media $tablet {
			font-size 18px
		}
	}
	&__price {
		display block
		margin-bottom 5px
		font-size 40px
		&:last-child {
			margin-bottom 0
		}
		@media $tablet {
			font-size 20px
		}
	}
	&__image {
		position relative
		margin-bottom 24px
		img {
			max-width 100%
		}
		@media $phone {
			margin-bottom 16px
		}
	}
	&__shadow {
		position absolute
		bottom 0
		left 0
		width 100%
		height auto
		height 6px
		background-size: 120%
		background-position center
		background-image: url(/images/shadow.svg)
	}
	&__shadowline {
		width 80%
		height: 40px;
		position: absolute;
		z-index: 0;
		bottom: 0px;
		left: 50%;
		background: rgba(20, 20, 20, .2);
		box-shadow: 0px 0 15px 30px rgba(20,20,20,.25);
		border-radius: 50%;
		transform-origin: center
		transform: translateX(-50%)
	}
}