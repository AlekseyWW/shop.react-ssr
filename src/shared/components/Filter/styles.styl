@import '../../styles/common.styl'

.Filter {
	& {
		display block
		margin-bottom 24px
		@media $phone {
			margin 0 -16px 24px
		}
	}
	&__inner {
		transform: translateZ(0)
		position relative
		display flex
		justify-content space-between
		font-size 12px
		padding 8px 10px
		z-index 10
		background $bgColor
		align-items center
		@media $phone {
			padding 8px 16px
			flex-direction column
			align-items flex-start
		}
	}
	&__sorting {
		display flex
	}
	&__filters {
		& {
			font-size 12px
			@media $phone {
				margin-bottom 8px
			}
		}
		&__item {
			display inline-block
			position relative
			padding-left 12px
			padding-right 8px
			&:before, &:after {
				content ''
				position absolute
				width 8px
				height 1px
				background-color #191919
				transform-origin center
				left 0
				top 7px
				transform rotate(45deg)
			}
			&:after {
				transform rotate(-45deg)
			}
			@media $phone {
				position initial
			}
		}
	}
}