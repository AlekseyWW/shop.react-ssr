.BarFilter {
	&__item {
		display inline-block
		margin-right 16px
		color $textColor
		font-size 12px
		&:last-child {
			margin-right 0
		}
		&_active {
			color $linkColor
		}
	}
	&__itemSm {
		width 50%
		display inline-block
	}
	&__button {
		margin-bottom 10px
		width 190px
		height 125px
		&:last-child {
			margin-bottom 0
		}
	}
	&__list {
		position relative
	}
	&__dropdown {
		z-index 1000
		margin-top 8px
		display none
		position absolute
		background-color: #fff
		padding: 5px
		width: 100%
		border-radius: 4px
		box-shadow: 0 2px 6px rgba(0,0,0,0.1)
		color: #000000
		&_active {
			display block
		}
	}
	&__brand {
		position relative
		cursor pointer
		display: inline-block
		padding-right: 24px
		.Icon {
			position absolute
			top 50%
			margin-top -4px
			right 0
		}
		&_active{
			& .Icon {
				transform rotate(180deg)
			}
		}
	}
}