.Dropdown {
	position relative
	color: #000
	@media $phone {
		// position initial
	}

	&__label {
		position relative
		background-color #fff
		border-radius: 4px
		padding 4px 8px
		font-weight $bold
	}
	&__title {
		position relative
		cursor pointer
		padding-right: 24px
		.Icon {
			position absolute
			top 50%
			margin-top -4px
			right 0
		}
		&_active{
			& .Icon {
				transform rotate(180deg)
			}
		}
	}
	&__head {
		font-size 16px
		padding 8px 16px
		border-bottom 1px solid rgba(0,0,0,0.1)
	}
	&__list {
		z-index 1000
		margin-top 8px
		top 100%
		left: 0
		display none
		position absolute
		background-color: #fff
		width auto
		border-radius: 4px
		box-shadow: 0 2px 6px rgba(0,0,0,0.1)

		&_active {
			display block
		}
		@media $phone {
			// left 16px
			// right 16px
		}
	}
	&__inner {
		border-bottom 1px solid rgba(0,0,0,0.1)
		max-height 150px
		overflow-y scroll
		&:last-child {
			border-bottom none
		}
	
	}
	&__action {
		padding 16px
		text-align right
	}
}