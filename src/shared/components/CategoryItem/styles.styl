.CategoryItem {
    width 50%
    float left
    box-sizing border-box
    padding 20px
    height 737px
    color #FFF
    font-size 40px
    line-height 1
    font-weight $black
    &_sm {
        width 33.33%
        height 468px
    }
    &__inner {
        background-position 50% 50%
        background-size cover
        padding 32px
        background-repeat no-repeat
        height 100%
        box-sizing border-box
        display flex
    }
    &_left-bottom {
        .CategoryItem__inner {
            align-items flex-end
        }
    }
    &_right-top {
        .CategoryItem__inner {
            justify-content flex-end
            text-align right
        }
    }
    &_right-bottom {
        .CategoryItem__inner {
            align-items flex-end
            justify-content flex-end
        }
    }
    &__title {
        width 55%
    }
    @media $phone {
        float none
        width 100%
        height 33vw
        min-height: 33vw
        padding 0
        display block
    }
}