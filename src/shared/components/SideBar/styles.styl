@import '../../styles/common.styl'

.SideBar {
	& {
		grid-width(2.5)
		float left
		box-sizing border-box
		padding-right 20px
	}
	&__filter {
		& {
			margin-bottom 20px
			padding-left 30px
		}
		&__title {
			text-transform uppercase
			margin-bottom 16px
			font-size 23px
			padding-bottom 16px
			border-bottom 1px solid $borderColor
			padding-left 30px
			margin-left -30px
		}
		&__item {
			margin-bottom 20px
		}
		&__list {
			&__item {
				margin-bottom 5px
				display block
				color $textColor
				font-size 14px
				&_active {
					color $linkColor
				}
			}
		}
		&__sublist {
			display none
			padding-left 16px
			&_active {
				display block
			}
		}
	}
	&__button {
		display inline-block
		margin-bottom 10px
		width 190px
		height 25px
		background-color #BD2D21
		border-radius: 6px
		border 0
		text-transform uppercase
		color #ffffff
		font-size 13px
		margin-left -30px
		&:last-child {
			margin-bottom 0
		}
	}
}