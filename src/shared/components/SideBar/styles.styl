@import '../../styles/common.styl'

.SideBar {
	& {
		grid-width(2.5)
		min-width: 230px
		float left
		box-sizing border-box
		padding-right 20px
		@media $verticalTablet {
			display none
		}
	}
	&__filter {
		& {
			margin-bottom 20px
			padding-left 30px
		}
		&__title {
			text-transform uppercase
			margin-bottom 16px
			font-size 23px
			padding-bottom 16px
			border-bottom 1px solid $borderColor
			padding-left 30px
			margin-left -30px
		}
		&__item {
			margin-bottom 20px
		}
		&__list {
			&__item {
				margin-bottom 5px
				display block
				color $textColor
				font-size 14px
				&_active {
					color $linkColor
				}
				&_cart {
					display none
					@media $verticalTablet {
						display block
					}
				}
			}
		}
		&__sublist {
			display none
			padding-left 16px
			&_active {
				display block
			}
		}
	}
	&__button {
		margin-left -30px
	}
	&__sex {
		margin-bottom 20px
		margin-left -30px
		display flex
		&__item {
			// background-color #fff
			padding 4px 8px
			font-size 12px
			font-weight bold
			display inline-block
			color $textColor
			transition background $duration
			cursor pointer
			border-radius: 4px
			&:hover {
				background-color #c1c1c1
			}
			&_active {
				color #000
				background-color #FFF
				&:hover {
					background-color #FFF
					cursor default
					pointer-events: none
				}
			}
		}
	}
	&__stock {
		border-bottom 1px solid $textColor
		margin-bottom 16px
		padding-bottom 16px

		&__item {
			font-weight bold
			border-radius: 4px
			padding 4px 6px
			color $textColor
			display block
			margin-bottom 4px
			text-transform: uppercase
			&:last-child {
				margin-bottom 0
			}
			&_active {
				background-color #fff

			}
		}
	}
}