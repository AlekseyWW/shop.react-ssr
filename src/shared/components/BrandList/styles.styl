@import '../../styles/common.styl'

.BrandList {
	& {
		container()
		position relative
		margin-bottom 100px
		@media $phone {
			margin 0 16px
		}
	}
	&__title {
		font-size 30px
		margin-bottom 20px
		padding-left 40px
	}
	&__list {
		&{
			overflow hidden
			margin 0 -5px
		}
	}
	&__wrapper {
		display flex
		justify-content flex-start
	}
	&__item {
		display block
		flex 1
		padding 5px
		box-sizing border-box
		text-align center
		color $textColor
	}
	&__img {
		flex 1
		max-width 100%
		background alpha(#CCC, 30%)
		padding 12px
		height 70px
		box-sizing border-box
		display flex
		align-items center
		justify-content center
		svg {
			width 100%
			height: 100%
		}
	}
	&__nav {
		position absolute
		top 0
		right 0
	}
}