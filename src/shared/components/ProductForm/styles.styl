@import '../../styles/common.styl'

.ProductForm {
	& {
		grid-width(4.5)
		float left
		clearfix()
		box-sizing border-box
		@media $phone {
			padding 0 16px
		}
	}
	&__head {
		margin-bottom 15px
		@media $phone {
			display none
		}
	}
	&__input {
		display block
		border 0
		border-bottom 1px solid $textColor
		box-shadow: 0
		margin-bottom 24px
		border-radius 0
		&:last-child {
			margin-bottom 0
		}
	}
	&__title {
		font-size 22px
		margin-bottom 8px
		font-weight bold
		text-transform uppercase
		line-height 1
	}
	&__subline {
		font-size 20px
		line-height 1
	}
	&__instagramm {
		width 50px
		height 50px
		display block
		margin 0 auto
		& svg {
			width 100%
			height 100%
			transition fill $duration
			&:hover {
				fill #BD2D21
				faster()
			}
		}
	}
	&__price {
		font-size 20px
		font-weight bold
		margin-bottom 12px
		@media $phone {
			display none
		}
		&__value {
			color: #BD2D21
			display inline-block
			margin-right 2px
			padding 0 5px
			&:last-child {
				margin-right 0
			}
		}
		&__old {
			color #000;
			position relative
			display inline-block
			padding 0 5px
			&:before {
				content ''
				position absolute
				top 50%
				left 0
				width 100%
				margin-top -1px
				height 2px
				background-color #808080
			}
		}
	}
	&__action {
		margin-bottom 25px
	}
	&__select {
		display inline-block
		margin-right 50px
	}
	&__button {
		padding 8px 16px
		font-size 18px !important
		width auto !important
		height auto !important
	}
	&__buttons {
		
		@media $phone {
			// display none
		}
	}
	&__callback {
		& {
			margin-bottom 20px
		}
		&__title {
			grid-width(1.5)
			display inline-block
			vertical-align top
			line-height 1.2
		}
		&__inner {
			grid-width(3)
			padding-left 10px
			box-sizing border-box
			display inline-block
			vertical-align top
			@media $phone {
				padding-left 0
			}
		}
		&__text {
			display inline-block
			line-height 1.2
		}
		&__phone {
			font-weight bold
			display block
			margin-bottom 12px
		}
		&__note {
			display inline-block
			font-size 9px
			line-height 1.2
		}
	}
	&__info {
		& {
			
		}
		&__block {
			margin-bottom 16px
		}
		&__title {
			line-height 1
			padding-bottom 8px
			margin-bottom 8px
			font-size 14px
			border-bottom: 1px solid #808080
		}
		&__text {
			font-size 12px
			line-height (15/12)
		}
	}
	&__colors {
		display flex
		margin-bottom 16px
		@media $phone {
			flex-wrap: wrap
		}
	}
	&__color {
		width 65px
		box-sizing border-box
		display inline-block
		font-size 0
		margin-right 8px
		display flex
		align-items center
		background #ffffff
		&:last-child {
			margin-right 0
		}
		img {
			width 100%
			display block
		}
		@media $phone {
			margin-bottom 8px
		}
	}
	&__sizes {
		& {
			margin-bottom 16px
		}
		&__container {
			display flex
			margin-bottom 16px
		}
		&__item {
			background-color #fff
			padding 3px 6px
			margin-left 6px
			cursor pointer
			transition color $duration, background $duration
			&:first-child {
				margin-left 0
			}
			&:hover, &_active {
				background-color #676766
				color #fff
			}
		}
	}
}

.Modal {
	& {
		display block
	}
	&_after {
		display block
	}
	&_before {
		display block
	}
	&__error {
		color tomato
		font-size 14px
		padding 5px
	}
	&__overlay {
		display block
		position fixed
		top 0
		left 0
		bottom 0
		right 0
		&_after {
			display block
		}
		&_before {
			display block
		}
	}
