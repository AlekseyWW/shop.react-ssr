@import '../../styles/common.styl'

.PromoItem {
	& {
		width 100%
		background-position 50% 50%
		background-size cover
		color #FFF
		padding-top 115px
		padding-bottom 50px
		@media $phone {
			padding 16px
		}
	}
	&__inner {
		container();
	}
	&__content {
		width 560px
	}
	&__title {
		font-weight bold
		font-size 22px
		margin-bottom 10px
		color #EFC825
		font-size 67px
		line-height 1.2
	}
	&__text {
		margin-bottom 50px
		font-size 30px
		width 300px
		line-height 1.2
	}
}