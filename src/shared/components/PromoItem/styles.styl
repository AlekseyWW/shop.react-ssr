@import '../../styles/common.styl'

.PromoItem {
	& {
		width 100%
		background-position 50% 50%
		background-size cover
		color #FFF
		padding-top 115px
		padding-bottom 50px
		@media $phone {
			padding 32px 0
		}
	}
	&__inner {
		container();
		@media $phone {
			padding 0 16px
		}
	}
	&__content {
		// width 560px
		@media $phone {
			width auto
		}
	}
	&__title {
		font-weight bold
		margin-bottom 16px
		color #EFC825
		font-size 28px
		line-height 1.2
		text-align center
		@media $phone {
			font-size 22px
		}
	}
	&__text {
		margin-bottom 50px
		font-size 30px
		width 300px
		line-height 1.2
		@media $phone {
			font-size 20px
		}
	}
	&__button {
		& {
			text-align center
			display block
			width 100%
		}
		&__item {
			display inline-block
			border-radius: 10px
			padding 8px 24px
			color $redColor
			background-color #ffffff
			line-height 1
			text-transform uppercase
			font-size 24px
			font-weight bold
			transition color $duration, background-color $duration
			&:hover {
				background-color $redColor
				color #ffffff
				faster()
			}
		}
	}
}