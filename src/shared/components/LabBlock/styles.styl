.LabBlock {
	& {
		grid-width(2, margin-left)
	}
	&__item {
		display inline-block
		vertical-align top
		margin-right 40px
		max-width 260px
		&:last-child {
			margin-right 0
		}
	}
	&__icon {
		display inline-block
		background $brandColor
		border-radius 3px
		width 40px
		height 40px
		vertical-align middle
		
	}
	&__top {
		display block
		margin-bottom 4px
	}
	&__title {
		display inline-block
		font-size 14px
		font-weight $bold
		vertical-align middle
		line-height 18/14
		padding-left 16px
	}
	&__text {
		padding-left 56px
		color $secondTextColor
		font-size 14px
		line-height 20/14
	}
}